a.single-promo href="#{promotion_path(promotion)}"
  - if promotion.promo_price.present?
    .promo-image
      = image_tag("promo-image.jpg", :alt => "promo")
      span.promo-image-text #{promotion.name}
    .promo-description
      h6 #{number_to_currency(promotion.promo_price, precision: 0,  delimiter: '.')}
      span.changed #{number_to_currency(promotion.full_price, precision: 0,  delimiter: '.')}
  - else
    .promo-image
      = image_tag("promo-image.jpg", :alt => "promo")
    .promo-description
      h6 #{promotion.name}
      span Cotizar

