            .col-sm-12
              button.btn.btn-cta.btn-block type="submit" Busca tu Pauta
            .col-sm-12
              = link_to "Ver todos", "#", :class => "btn btn-link btn-block"

javascript:
  $('.single-item .single-item-link').click(function() {
    $('.single-item').removeClass('active').addClass('not-active');
    $(this).parent().removeClass('not-active').addClass('active');
  });
  $('.single-item .single-item-link').mouseenter(function() {
    if ($("#logo .visible-xs").css('display') == 'none') {
      $(this).click();
    };
  });
  
  $('.close-item').click(function() {
    $('.single-item').removeClass('active not-active');
  });